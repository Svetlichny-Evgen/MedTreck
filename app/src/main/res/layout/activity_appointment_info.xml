<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              tools:context=".AppointmentInfo">

    <TextView
            android:id="@+id/patientNameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ім'я пацієнта:"
            android:textSize="18sp" />

    <TextView
            android:id="@+id/patientNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ім'я пациента"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/doctorNameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ім'я лікаря:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/doctorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ім'я лікаря"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/nurseNameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ім'я мед. сестри:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/nurseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ім'я мед. сестри"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/medicationNameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назва медичного препарата:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/medicationNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назва медичного препарата"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/procedureNameTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назва процедури:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/procedureNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назва процедури"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    <TextView
            android:id="@+id/procedureDateTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата проводження обліку:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/procedureDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата проводження обліку"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Назад" />

</LinearLayout>
